{# ============================================================================
   Promotional Banner Component
   Sticky banner for promotions and offers
   ============================================================================ #}

<div class="promo-banner" id="promoBanner">
  <div class="container">
    <div class="promo-banner__content">
      <div class="promo-banner__message">
        <span class="promo-icon">ðŸŽ‰</span>
        <span class="promo-text">
          Get <strong>10% OFF</strong> on your first order!
        </span>
      </div>

      <form class="promo-banner__form" id="promoForm">
        <input 
          type="email" 
          placeholder="Enter your email"
          class="promo-input"
          required
        >
        <button type="submit" class="btn btn-primary btn-sm">
          Get Code
        </button>
      </form>

      <button class="promo-banner__close" id="closeBanner">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<style scoped>
.promo-banner {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  color: var(--color-black);
  padding: var(--spacing-md);
  position: sticky;
  top: 0;
  z-index: calc(var(--z-sticky) - 1);
  box-shadow: var(--shadow-md);
}

.promo-banner__content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--spacing-lg);
}

.promo-banner__message {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  flex: 1;
  font-weight: 600;
  font-size: 0.95rem;
}

.promo-icon {
  font-size: 1.25rem;
}

.promo-banner__form {
  display: flex;
  gap: var(--spacing-sm);
  flex: 1;
  max-width: 300px;
}

.promo-input {
  flex: 1;
  padding: var(--spacing-sm) var(--spacing-md);
  border: none;
  border-radius: var(--radius-md);
  font-size: 0.9rem;
}

.promo-banner__close {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.1);
  border: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  color: var(--color-black);
  transition: all var(--transition-base);
}

.promo-banner__close:hover {
  background: rgba(0, 0, 0, 0.2);
}

.promo-banner__close svg {
  width: 18px;
  height: 18px;
}

@media (max-width: 768px) {
  .promo-banner__content {
    flex-direction: column;
    align-items: stretch;
  }

  .promo-banner__message {
    justify-content: center;
  }

  .promo-banner__form {
    max-width: none;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const banner = document.getElementById('promoBanner');
  const closeBtn = document.getElementById('closeBanner');
  const form = document.getElementById('promoForm');

  // Close banner
  closeBtn.addEventListener('click', function() {
    banner.style.display = 'none';
    localStorage.setItem('promoBannerClosed', 'true');
  });

  // Check if banner was previously closed
  if (localStorage.getItem('promoBannerClosed')) {
    banner.style.display = 'none';
  }

  // Handle form submission
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    const email = this.querySelector('input[type="email"]').value;
    
    // Send email to capture list
    fetch('/api/promo/subscribe', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ email: email })
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        showNotification('Check your email for the discount code!', 'success');
        form.reset();
        setTimeout(() => {
          banner.style.display = 'none';
          localStorage.setItem('promoBannerClosed', 'true');
        }, 2000);
      }
    })
    .catch(error => console.error('Error:', error));
  });
});

function showNotification(message, type) {
  const notification = document.createElement('div');
  notification.className = `notification notification-${type}`;
  notification.textContent = message;
  notification.style.cssText = `
    position: fixed;
    top: 100px;
    right: 20px;
    padding: 1rem 1.5rem;
    background: ${type === 'success' ? '#4CAF50' : '#F44336'};
    color: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 9999;
    animation: slideInRight 0.3s ease-in-out;
  `;
  document.body.appendChild(notification);
  setTimeout(() => notification.remove(), 3000);
}
</script>
