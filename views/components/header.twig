{# ============================================================================
   Header Component
   Navigation, search, and cart icon
   ============================================================================ #}

<header class="header">
  <div class="container">
    <div class="header__top">
      {# Logo #}
      <div class="header__logo">
        <a href="/">
          <img src="{{ store.logo }}" alt="{{ store.name }}" class="logo-image">
          <span class="logo-text">{{ store.name }}</span>
        </a>
      </div>

      {# Search Bar #}
      <div class="header__search">
        <form action="/search" method="GET" class="search-form">
          <input 
            type="search" 
            name="q" 
            placeholder="Search products..."
            class="search-input"
            autocomplete="off"
          >
          <button type="submit" class="search-btn">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
            </svg>
          </button>
        </form>
      </div>

      {# Header Actions #}
      <div class="header__actions">
        {# Account #}
        <a href="/account" class="header__action" title="Account">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
          <span class="action-label">Account</span>
        </a>

        {# Wishlist #}
        <a href="/wishlist" class="header__action" title="Wishlist">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
          </svg>
          <span class="action-label">Wishlist</span>
        </a>

        {# Cart Icon - CRO Important #}
        <button 
          class="header__action header__cart" 
          data-toggle="cart"
          title="Shopping Cart"
        >
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
          </svg>
          <span class="cart-count">{{ cart.items | length }}</span>
          <span class="action-label">Cart</span>
        </button>
      </div>
    </div>

    {# Navigation Menu #}
    <nav class="header__nav">
      <div class="nav-container">
        {# Main Menu #}
        <ul class="nav-menu">
          {% for category in store.categories %}
            <li class="nav-item">
              <a href="{{ category.url }}" class="nav-link">
                {{ category.name }}
              </a>
              
              {# Submenu #}
              {% if category.subcategories %}
                <ul class="nav-submenu">
                  {% for subcategory in category.subcategories %}
                    <li>
                      <a href="{{ subcategory.url }}">{{ subcategory.name }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </li>
          {% endfor %}

          {# Special Offers #}
          <li class="nav-item nav-item--highlight">
            <a href="/offers" class="nav-link nav-link--highlight">
              ðŸŽ‰ Special Offers
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>

